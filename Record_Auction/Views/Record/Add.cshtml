@model Record_Auction.Models.RecordViewModels.AddRecordViewModel
<h1>Add Record</h1>

<form asp-controller="Record" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Artist"></label>
        <input class="form-control" asp-for="Artist" />
        <span asp-validation-for="Artist"></span>
    </div>
    <div class="form-group">
        <label asp-for="SideA"></label>
        <input class="form-control" asp-for="SideA" />
        <span asp-validation-for="SideA"></span>
    </div>
    <div class="form-group">
        <label asp-for="SideB"></label>
        <input class="form-control" asp-for="SideB" />
        <span asp-validation-for="SideB"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes"></label>
        <input class="form-control" asp-for="Notes" />
        <span asp-validation-for="Notes"></span>
    </div>
    <div class="form-group">
        <label asp-for="Label"></label>
        <input class="form-control" asp-for="Label" />
        <span asp-validation-for="Label"></span>
    </div>
    <div class="form-group">
        <label asp-for="RecordNumber"></label>
        <input class="form-control" asp-for="RecordNumber" />
        <span asp-validation-for="RecordNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="MinValue"></label>
        <input class="form-control" asp-for="RecordNumber" />
        <span asp-validation-for="MinValue"></span>
    </div>
    <div class="form-group">
        <label asp-for="Conditions"></label>
        <select asp-for="ConditionID" class="form-control" asp-items="Model.Conditions"></select>
    </div>

    <input type="submit" value="Add Record" />
</form>